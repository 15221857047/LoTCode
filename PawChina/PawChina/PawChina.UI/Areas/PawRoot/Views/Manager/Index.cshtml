        function getHomeBtn() {
            var win_width = $(window).width()
            if (win_width < 991) {
                $('#main').css('min-height', '900px');
            }
            if (win_width < 770) {
                $('#lot-temp').css('display', 'none');
            } else {
                $('#lot-temp').css('display', '');
