@{
    Layout = "~/Areas/PawRoot/Views/Shared/PawRootEdit.cshtml";
}

@section HeadCss{
}

<div class="form-horizontal">
    <!--分类名称-->
    <div class="form-group">
        <label class="col-sm-2 control-label">分类名称：</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" id="title" placeholder="请输入分类名...">
        </div>
        <label class="lot-blue">最大长度: 100 字符</label>
    </div>
    <!--分类类别-->
    <div class="form-group">
        <label class="col-sm-2 control-label">分类类别：</label>
        <div class="col-sm-6">
            <select id="groupType" class="form-control">
                <option value="0">请选择分类</option>
                <option value="1">商品分类</option>
                <option value="2">配件分类</option>
            </select>
        </div>
        <label class="lot-blue"></label>
    </div>
    <!--分类级别-->
    <div class="form-group">
        <label class="col-sm-2 control-label">分类级别：</label>
        <div class="col-sm-6">
            <select id="floor" class="form-control">
                <option value="1">一级分类</option>
                <option value="2">二级分类</option>
                <option value="3">三级分类</option>
            </select>
        </div>
    </div>
    <!--所属分类-->
    <div class="form-group" id="ptype">
        <label class="col-sm-2 control-label">所属分类：</label>
        <div class="col-sm-6">
            <select id="pid" class="lot-tagSelect form-control">
                <optgroup label="一级分类">
                    <option>一级分类1</option>
                    <option>一级分类2</option>
                    <option>一级分类3</option>
                </optgroup>
                <optgroup label="二级分类">
                    <option>二级分类1</option>
                    <option>二级分类2</option>
                    <option>二级分类3</option>
                    <option>二级分类4</option>
                    <option>二级分类5</option>
                </optgroup>
            </select>
        </div>
        <label class="lot-blue">上一级分类（提供搜索功能）</label>
    </div>
    <!--分类排序-->
    <div class="form-group">
        <label class="col-sm-2 control-label">分类排序：</label>
        <div class="col-sm-6">
            <input type="number" class="form-control" id="sort" value="19" placeholder="没有特殊需求请，设置为默认值19...">
        </div>
        <span class="lot-red">没有特殊需求请，设置为默认值19</span><br /><span>数值越大排名越靠前（取值范围：1~99）</span>
    </div>
    <!--展览小图-->
    <div class="form-group">
        <label class="col-sm-2 control-label" style="padding-top:13px;">展览小图：</label>
        <div class="col-sm-6">
            <span style="float:left;width:160px;"><span id="lot-uploader"></span></span><img id="displayPic" style="width:60px;height:33px;" />
        </div>
    </div>
    <!--分类简介-->
    <div class="form-group">
        <label class="col-sm-2 control-label">分类简介：</label>
        <div class="col-sm-6">
            <textarea id="container" class="form-control" style="height:9em;"></textarea>
        </div>
    </div>
    <!--表单提交-->
    <div class="form-group">
        <label class="col-sm-2"></label>
        <div class="col-sm-6">
            <button id="form-success" class="btn btn-success lot-form-btn">提 交 文 章</button>
            <button id="form-gohome" class="btn btn-success lot-form-btn">返 回 列 表</button>
        </div>
    </div>
</div>

@section JsScript{
    <script src="/Areas/PawRoot/assets/js/protypeinfo.min.js" async></script>
    <script type="text/javascript">
        $(function () {
            $('#pid').select2({
                tags: true,
                tokenSeparators: [',', ' ']
            });
        });
        //提交表单
        $('#form-success').click(function () {
            ajaxToDisPhoto(false);
        });
    </script>
}
