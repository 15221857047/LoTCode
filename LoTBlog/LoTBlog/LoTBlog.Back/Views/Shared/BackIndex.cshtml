                    <li><a href="javascript:void(0);" data-url="@Url.Action("Compute", "Census")">后续扩展中</a> </li>
                </ul>
            </div>
            <div title="网站管理专栏" style="overflow: auto; padding: 3px;">
                <ul class="menu_list">
                    <li><a href="javascript:void(0);" data-url="@Url.Action("Index", "ImgFlash")">幻灯片专栏</a> </li>
                    <li><a href="javascript:void(0);" data-url="@Url.Action("Index", "ArticleTag")">Tag标签专栏</a></li>
                    @*<li><a href="javascript:void(0);" data-url="@Url.Action("Index", "Census")">黑白名单管理</a></li>
                        <li><a href="javascript:void(0);" data-url="@Url.Action("Index", "HotWord")">热词热搜统计</a></li>*@
