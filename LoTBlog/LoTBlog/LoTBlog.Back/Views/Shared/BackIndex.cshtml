                    <li><a href="javascript:void(0);" data-url="@Url.Action("Compute", "Census")">后续扩展中</a> </li>
                </ul>
            </div>
        </div>
    </div>
    <!--/左侧-->
    <!--主页面-->
    <div data-options="region:'center',border:false">
        <div id="mainContent" style="width:100%;height:98%">
            <iframe id="ifrContent" scrolling="auto" frameborder="0" src="@Url.Action("Compute", "Census")" style="width:100%;height:100%;"></iframe>
        </div>
    </div>
    <!--/主页面-->
    <script type="text/javascript" src="/Script/jquery-1.8.3.min.js"></script>
    <script type="text/javascript" src="/Script/easyui/jquery.easyui.min.js"></script>
    <script type="text/javascript" src="/Script/common.js"></script>
    <script type="text/javascript">
        //管理后台桌面操作
        var desktop = {

            //添加右侧操作区
            addMain: function (obj) {
                var self = this;

                //创建Tab页
                $("#mainContent").html(self.createFrame(obj.url));
            },

            //创建iFrame方法
            createFrame: function (url) {
                $("#ifrContent").attr("src", url);
            }
        }

        $(function () {

            //菜单显示效果
            $(".menu_list li").on({
                mouseenter: function () {
                    $(this).addClass("current").siblings().removeClass("current");
                },
                mouseleave: function () {
                    $(this).removeClass("current");
                },
                click: function () {
                    $(".menu_list li").removeClass('active');
                    $(this).addClass("active");
                }
            });

            //菜单点击导航
            $(".menu_list a").click(function () {
                var params = { text: this.text, url: this.attributes['data-url'].value };
                desktop.addMain(params);
            });
        });

        function changeMenuTab(obj) {
            var index = $(obj).attr("index");
            $("#businessManage").hide();
            $("#siteManage").hide();
            $("#systemManage").hide();
            $("#" + index).show();
            $("#" + index).accordion({
                animate: true
            });
            $("#navUl li").removeClass("cur");
            $(obj).parent().addClass("cur");
        }
    </script>
</body>
</html>
